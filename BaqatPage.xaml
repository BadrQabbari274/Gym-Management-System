<Window x:Class="Forma_System.BaqatPage"
        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Forma_System"
        mc:Ignorable="d"
        Title="باقات" Height="450" Width="800" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">


    <Grid Background="#FF18191F">
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="355*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="TextBlock_BaqatId" HorizontalAlignment="Left" Margin="260,14,0,0" TextWrapping="Wrap" Text="م.الباقة" VerticalAlignment="Top" Width="96" FontFamily="Arial Black" FontSize="14" TextAlignment="Right" Foreground="White" Grid.Row="2"/>
        <TextBox x:Name="TextBox_BaqatId" 
    Style="{StaticResource RoundedTextBoxReadStyle}"
         ToolTip="هذا الحقل يتم توليده تلقائيًا من النظام ويعرض لك فقط لا يمكن تعديله." HorizontalAlignment="Left" Margin="20,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="336" Height="21" TextAlignment="Right" FontFamily="Times New Roman" FontSize="14" Background="AntiqueWhite" Grid.Row="2"/>

        <DataGrid x:Name="DG"
                  Grid.Row="2"
                  Margin="376,42,10,80"
                  Background="White"
                  AutoGenerateColumns="False"
                  RowBackground="White"
                  AlternatingRowBackground="{StaticResource AltRowBrush}"
                  ColumnHeaderStyle="{StaticResource DGHeaderStyle}"
                  CellStyle="{StaticResource DGCellStyle}"
                  SelectionChanged="DG_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="م.الباقة"
                                    Binding="{Binding Id}"
                                    Width="80"/>
                <DataGridTextColumn Header="اسم الباقة"
                                    Binding="{Binding Name}"
                                    Width="*"/>
                <DataGridTextColumn Header="أيام الشهر"
                                    Binding="{Binding DaysPerMonth}"
                                    Width="100"/>
                <DataGridTextColumn Header="أقصى أيام/أسبوع"
                                    Binding="{Binding MaxDaysPerWeek}"
                                    Width="120"/>
                <DataGridTextColumn Header="ملاحظات"
                                    Binding="{Binding Notes}"
                                    Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <TextBox x:Name="TextBox_BaqatSearsh" Style="{StaticResource RoundedTextBoxStyle}" Margin="379,9,14,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="28" Background="AntiqueWhite" Grid.Row="2" TextChanged="TextBox_BaqatSearsh_TextChanged"/>
        <TextBlock x:Name="TextBlock_BaqatSearsh" Margin="727,12,21,0" TextWrapping="Wrap" Text="بحث" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="20" TextAlignment="Center" Foreground="Black" Grid.Row="2"/>
        <TextBlock x:Name="TextBlock_BaqatNumOfDayM" HorizontalAlignment="Left" Margin="260,113,0,0" TextWrapping="Wrap" Text="عدد الايام في الشهر" VerticalAlignment="Top" Width="96" FontFamily="Arial Black" FontSize="14" TextAlignment="Right" Foreground="White" Grid.Row="2"/>
        <TextBox x:Name="TextBox_BaqatNumOfDayM" Style="{StaticResource RoundedTextBoxStyle}" Background="AntiqueWhite" HorizontalAlignment="Left" Margin="20,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="336" Height="25" TextAlignment="Right" FontFamily="Times New Roman" FontSize="14" Grid.Row="2"/>
        <TextBlock x:Name="TextBlock_CustomerName" HorizontalAlignment="Left" Margin="260,61,0,0" TextWrapping="Wrap" Text="اسم الباقة" VerticalAlignment="Top" Width="96" FontFamily="Arial Black" FontSize="14" TextAlignment="Right" Foreground="White" Grid.Row="2"/>
        <TextBox x:Name="TextBox_BaqatName" Style="{StaticResource RoundedTextBoxStyle}" Background="AntiqueWhite" HorizontalAlignment="Left" Margin="20,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="336" Height="25" TextAlignment="Right" FontFamily="Times New Roman" FontSize="14" Grid.Row="2"/>
        <TextBlock x:Name="TextBlock_BaqatNotes"  HorizontalAlignment="Left" Margin="258,209,0,0" TextWrapping="Wrap" Text="ملاحظات (اختياري)ا" VerticalAlignment="Top" Width="96" FontFamily="Arial Black" FontSize="14" TextAlignment="Right" Foreground="White" Grid.Row="2"/>
        <TextBox x:Name="TextBox_BaqatNotes" Style="{StaticResource RoundedTextBoxStyle}" Background="AntiqueWhite" HorizontalAlignment="Left" Margin="20,228,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="336" Height="39" TextAlignment="Right" FontFamily="Times New Roman" FontSize="14" Grid.Row="2"/>
        <TextBlock x:Name="TextBlock_BaqatNumOfDayW" HorizontalAlignment="Left" Margin="193,163,0,0" TextWrapping="Wrap" Text="الحد الاقصي للايام في الاسبوع" VerticalAlignment="Top" Width="163" FontFamily="Arial Black" FontSize="14" TextAlignment="Right" Foreground="White" Grid.Row="2"/>
        <TextBox x:Name="TextBox_BaqatNumOfDayW" Style="{StaticResource RoundedTextBoxStyle}"  Background="AntiqueWhite" HorizontalAlignment="Left" Margin="20,182,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="336" Height="25" TextAlignment="Right" FontFamily="Times New Roman" FontSize="14" Grid.Row="2"/>
        <Grid Background="White" Height="30" VerticalAlignment="Center" Width="800">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="TextBlock_TitleProgram" TextWrapping="Wrap" Text="Forma System" FontFamily="Arial Black" Margin="5,8,687,6" TextAlignment="Center"/>
            <TextBlock x:Name="TextBlock_TitlePage" TextWrapping="Wrap" Text="صفحة الباقات" FontFamily="Arial Black" Margin="307,2,313,-2" TextAlignment="Center" FontSize="24"/>
        </Grid>
        <Button x:Name="Button_Add"  Content="اضافة" Style="{StaticResource RoundedButtonStyle}" Margin="51,278,465,20"  Background="AntiqueWhite" FontFamily="Arial Black" FontSize="16" Click="Button_Add_Click" Grid.Row="2" MinHeight="30"/>
        <Button x:Name="Button_Delete" Content="حذف" Style="{StaticResource RoundedButtonStyle}" Margin="588,273,19,25"  Background="AntiqueWhite" FontFamily="Arial Black" FontSize="16" Click="Button_Delete_Click" Grid.Row="2" MinHeight="30"/>
        <Button x:Name="Button_Update" Content="تعديل" Style="{StaticResource RoundedButtonStyle}" Margin="387,273,220,25"  Background="AntiqueWhite" FontFamily="Arial Black" FontSize="16" Click="Button_Update_Click" Grid.Row="2" MinHeight="30"/>
        <TextBlock x:Name="TextBlock_Display" TextWrapping="Wrap" Text="الباقات" FontFamily="Arial Black" Margin="504,15,106,0" TextAlignment="Center" FontSize="24" Foreground="White" Grid.Row="1" Height="30" VerticalAlignment="Top"/>
        <TextBlock x:Name="TextBlock_Add" TextWrapping="Wrap" Text="اضافة باقة" FontFamily="Arial Black" Margin="98,15,512,0" TextAlignment="Center" FontSize="24" Foreground="White" Height="30" VerticalAlignment="Top" Grid.Row="1"/>
        <Button x:Name="Button_Return" Content="خروج" Style="{StaticResource RoundedButtonReturnStyle}" Margin="0,2,23,2" Click="Button_Return_Click" IsCancel="True" Width="121" />

    </Grid>
</Window>
