<Window x:Class="Forma_System.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="تأكيد المطوّر" Height="150" Width="300" WindowStartupLocation="CenterScreen" Background="#FF18191F">
    <Grid Margin="10" >
        <StackPanel> 
            <TextBlock x:Name="MessageText" Text="..." Margin="0 0 0 10"/>
            <PasswordBox x:Name="passwordBox" Margin="0 0 0 10"/>
            <Button Content="تأكيد" Style="{StaticResource RoundedButtonStyle}" Click="Confirm_Click" HorizontalAlignment="Right" Width="70" Background="AntiqueWhite"/>
        </StackPanel>
    </Grid>
</Window>