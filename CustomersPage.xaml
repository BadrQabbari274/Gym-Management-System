<Window x:Class="Forma_System.CustomersPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Forma_System"
        mc:Ignorable="d"
        Title="عملاء" Height="450" Width="800" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#FF18191F">
        <Grid.RowDefinitions>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="355*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="TextBlock_CustomerId" HorizontalAlignment="Left" Margin="270,15,0,0" TextWrapping="Wrap" Text="م.العميل" VerticalAlignment="Top" Width="81" FontFamily="Arial Black" FontSize="14" TextAlignment="Right" Foreground="White" Grid.Row="2"/>
        <TextBox x:Name="TextBox_CustomerId" 
    Style="{StaticResource RoundedTextBoxReadStyle}"
         ToolTip="هذا الحقل يتم توليده تلقائيًا من النظام ويعرض لك فقط لا يمكن تعديله." HorizontalAlignment="Left" Margin="13,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="342" Height="21" TextAlignment="Right" FontFamily="Times New Roman" FontSize="14" Background="AntiqueWhite" Grid.Row="2"/>

        <DataGrid x:Name="DG" Grid.Row="2"
                  Margin="379,41,10,71"
                  Background="White"
                  AutoGenerateColumns="False"
                  RowBackground="White"
                  AlternatingRowBackground="{StaticResource AltRowBrush}"
                  ColumnHeaderStyle="{StaticResource DGHeaderStyle}"
                  CellStyle="{StaticResource DGCellStyle}"
                  SelectionChanged="DG_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="م.العميل"
                                    Binding="{Binding Id}"
                                    Width="80"/>
                <DataGridTextColumn Header="كود العميل"
                                    Binding="{Binding CustomerCode}"
                                    Width="120"/>
                <DataGridTextColumn Header="اسم العميل"
                                    Binding="{Binding Name}"
                                    Width="120"/>
                <DataGridTextColumn Header="ملاحظات"
                                    Binding="{Binding Notes}"
                                    Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <TextBox x:Name="TextBox_CustomerSearsh" Style="{StaticResource RoundedTextBoxStyle}" Margin="382,8,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="28" Background="AntiqueWhite" Grid.Row="2" TextChanged="TextBox_CustomerSearch_TextChanged"/>
        <TextBlock x:Name="TextBlock_CustomerCode" HorizontalAlignment="Left" Margin="270,119,0,0" TextWrapping="Wrap" Text="كود العميل" VerticalAlignment="Top" Width="81" FontFamily="Arial Black" FontSize="14" TextAlignment="Right" Foreground="White" Grid.Row="2"/>
        <TextBox x:Name="TextBox_CustomerCode" Style="{StaticResource RoundedTextBoxStyle}" Background="AntiqueWhite" HorizontalAlignment="Left" Margin="13,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="342" Height="26" TextAlignment="Right" FontFamily="Times New Roman" FontSize="14" Grid.Row="2"/>
        <TextBlock x:Name="TextBlock_CustomerName" HorizontalAlignment="Left" Margin="270,66,0,0" TextWrapping="Wrap" Text="اسم العميل" VerticalAlignment="Top" Width="81" FontFamily="Arial Black" FontSize="14" TextAlignment="Right" Foreground="White" Grid.Row="2"/>
        <TextBox x:Name="TextBox_CustomerName" Style="{StaticResource RoundedTextBoxStyle}" Background="AntiqueWhite" HorizontalAlignment="Left" Margin="13,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="342" Height="26" TextAlignment="Right" FontFamily="Times New Roman" FontSize="14" Grid.Row="2"/>
        <TextBlock x:Name="TextBlock_SubscribeNotes" HorizontalAlignment="Left" Margin="234,173,0,0" TextWrapping="Wrap" Text="ملاحظات (اختياري)ا" VerticalAlignment="Top" Width="117" FontFamily="Arial Black" FontSize="14" TextAlignment="Right" Foreground="White" Grid.Row="2"/>
        <TextBox x:Name="TextBox_CustomerNotes" Style="{StaticResource RoundedTextBoxStyle}" Background="AntiqueWhite" HorizontalAlignment="Left" Margin="13,198,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="342" Height="40" TextAlignment="Right" FontFamily="Times New Roman" FontSize="14" Grid.Row="2"/>
        <Grid Background="White" Height="30" VerticalAlignment="Center" Width="800">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="TextBlock_TitleProgram" TextWrapping="Wrap" Text="Forma System" FontFamily="Arial Black" Margin="5,8,687,6" TextAlignment="Center"/>
            <TextBlock x:Name="TextBlock_TitlePage" TextWrapping="Wrap" Text="صفحة العملاء" FontFamily="Arial Black" Margin="307,2,313,-2" TextAlignment="Center" FontSize="24"/>
        </Grid>
        <TextBlock x:Name="TextBlock_Add" TextWrapping="Wrap" Text="اضافة عميل" FontFamily="Arial Black" Margin="94,12,526,0" TextAlignment="Center" FontSize="24" Foreground="White" Height="30" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBlock x:Name="TextBlock_Display" TextWrapping="Wrap" Text="العملاء" FontFamily="Arial Black" Margin="504,15,116,0" TextAlignment="Center" FontSize="24" Foreground="White" Grid.Row="1" Height="30" VerticalAlignment="Top"/>
        <Button x:Name="Button_Add" Content="اضافة" Style="{StaticResource RoundedButtonStyle}" Margin="47,258,479,47"  Background="AntiqueWhite" FontFamily="Arial Black" FontSize="16" Click="Button_Add_Click" Grid.Row="2" MinHeight="30"/>
        <Button x:Name="Button_Delete" Content="حذف" Style="{StaticResource RoundedButtonStyle}" Margin="594,288,23,17"  Background="AntiqueWhite" FontFamily="Arial Black" FontSize="16" Click="Button_Delete_Click" Grid.Row="2" MinHeight="30"/>
        <Button x:Name="Button_Update" Content="تعديل" Style="{StaticResource RoundedButtonStyle}" Margin="393,288,224,17"  Background="AntiqueWhite" FontFamily="Arial Black" FontSize="16" Click="Button_Update_Click" Grid.Row="2" MinHeight="30"/>
        <TextBlock x:Name="TextBlock_BaqatSearsh" Margin="0,10,10,0" TextWrapping="Wrap" Text="بحث" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="20" TextAlignment="Center" Foreground="Black" Grid.Row="2" HorizontalAlignment="Right" Width="52"/>
        <Button x:Name="Button_Return" Content="خروج" Style="{StaticResource RoundedButtonReturnStyle}" Margin="0,2,23,1" Click="Button_Return_Click" IsCancel="True" Width="121" />

    </Grid>
</Window>
