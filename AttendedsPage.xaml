<Window x:Class="Forma_System.AttendedsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Forma_System"
        mc:Ignorable="d"
        Title="حضور" Height="450" Width="800" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <!-- رؤوس أعمدة الـ DataGrid -->

    <Grid Background="#FF18191F">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="93*"/>
            <ColumnDefinition Width="107*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="353*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="TextBlock_AttendedCustomerId" HorizontalAlignment="Left" Margin="261,4,0,0" TextWrapping="Wrap" Text="م.العميل" VerticalAlignment="Top" Width="92" FontFamily="Arial Black" FontSize="14" TextAlignment="Right" Foreground="White" Grid.Row="2"/>
        <TextBox x:Name="TextBox_AttendedCustomerId" 
    Style="{StaticResource RoundedTextBoxReadStyle}"
         ToolTip="هذا الحقل يتم توليده تلقائيًا من النظام ويعرض لك فقط لا يمكن تعديله." HorizontalAlignment="Left" Margin="10,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="345" Height="21" TextAlignment="Right" FontFamily="Times New Roman" FontSize="14" Background="AntiqueWhite" Grid.Row="2"/>

        <DataGrid x:Name="DG" Grid.Row="2"
                  Margin="10,41,10,74"
                  Background="White"
                  AutoGenerateColumns="False"
                  RowBackground="White"
                  AlternatingRowBackground="{StaticResource AltRowBrush}"
                  ColumnHeaderStyle="{StaticResource DGHeaderStyle}"
                  CellStyle="{StaticResource DGCellStyle}"
                  SelectionChanged="DG_SelectionChanged" Grid.Column="1">

            <DataGrid.Columns>
                <!-- رقم الحضور -->
                <DataGridTextColumn Header="م.الحضور" Binding="{Binding Id}" Width="80"/>

                <!-- اسم العميل -->
                <DataGridTextColumn Header="اسم العميل" Binding="{Binding Customer.Name}" Width="150"/>

                <!-- التاريخ -->
                <DataGridTextColumn Header="التاريخ" Binding="{Binding DateTime}" Width="150"/>

                <!-- الملاحظات -->
                <DataGridTextColumn Header="ملاحظات" Binding="{Binding Notes}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name="TextBox_CustomerAttendedSearsh" 
    Style="{StaticResource RoundedTextBoxStyle}" Margin="10,6,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="28" Background="AntiqueWhite" Grid.Row="2" Grid.Column="1"/>
        <Button x:Name="Button_Add" MinHeight="30" Content="اضافة" Style="{StaticResource RoundedButtonStyle}" Margin="26,264,33,39"  Background="AntiqueWhite" FontFamily="Arial Black" FontSize="16" Grid.Row="2" Click="Button_Add_Click"/>
        <Button x:Name="Button_Delete" MinHeight="30" Content="حذف" Style="{StaticResource RoundedButtonStyle}" Margin="225,285,22,18"  Background="AntiqueWhite" FontFamily="Arial Black" FontSize="16" Grid.Row="2" Click="Button_Delete_Click" Grid.Column="1"/>
        <Button x:Name="Button_Update" MinHeight="30" Content="تعديل" Style="{StaticResource RoundedButtonStyle}"  Margin="23,285,225,18" Background="AntiqueWhite" FontFamily="Arial Black" FontSize="16" Grid.Row="2" Click="Button_Update_Click" Grid.Column="1"/>
        <TextBlock x:Name="TextBlock_AttendedCustomerName"  HorizontalAlignment="Left" Margin="261,67,0,0" TextWrapping="Wrap" Text="اسم العميل" VerticalAlignment="Top" Width="92" FontFamily="Arial Black" FontSize="14" TextAlignment="Right" Foreground="White" Grid.Row="2"/>
        <TextBlock x:Name="TextBlock_AttendedNotes" HorizontalAlignment="Left" Margin="236,138,0,0" TextWrapping="Wrap" Text="ملاحظات (اختياري)ا" VerticalAlignment="Top" Width="117" FontFamily="Arial Black" FontSize="14" TextAlignment="Right" Foreground="White" Grid.Row="2"/>
        <TextBox x:Name="TextBox_AttendedNotes" Style="{StaticResource RoundedTextBoxStyle}" Background="AntiqueWhite" HorizontalAlignment="Left" Margin="10,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="345" Height="46" TextAlignment="Right" FontFamily="Times New Roman" FontSize="14" Grid.Row="2"/>
        <Grid Background="White" Height="30" VerticalAlignment="Center" Width="800" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="TextBlock_TitleProgram" TextWrapping="Wrap" Text="Forma System" FontFamily="Arial Black" Margin="5,8,687,6" TextAlignment="Center"/>
            <TextBlock x:Name="TextBlock_TitlePage" TextWrapping="Wrap" Text="صفحة الحضور" FontFamily="Arial Black" Margin="307,2,313,-2" TextAlignment="Center" FontSize="24"/>
        </Grid>
        <ComboBox x:Name="ComboBox_Customers" Style="{StaticResource RoundedComboBoxStyle}" Background="AntiqueWhite" DisplayMemberPath="Name" SelectedValuePath="Id" HorizontalAlignment="Left" Margin="10,89,0,0" Grid.Row="2" VerticalAlignment="Top" Width="345" Height="32"/>
        <TextBlock x:Name="TextBlock_Add" TextWrapping="Wrap" Text="اضافة حضور" FontFamily="Arial Black" Margin="92,12,100,10" TextAlignment="Center" FontSize="24" Grid.Row="1" Foreground="White"/>
        <TextBlock x:Name="TextBlock_Add_Copy" TextWrapping="Wrap" Text="الحضور" FontFamily="Arial Black" Margin="102,10,146,12" TextAlignment="Center" FontSize="24" Grid.Row="1" Foreground="White" Grid.Column="1"/>
        <TextBlock x:Name="TextBlock_BaqatSearsh" Margin="364,9,12,0" TextWrapping="Wrap" Text="بحث" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="20" TextAlignment="Center" Foreground="Black" Grid.Row="2" Grid.Column="1"/>
        <CheckBox x:Name="CheckBox_NoSubscribe"
          Content="حصة"
          Style="{StaticResource NoSubscribeCheckBoxStyle}"
          Grid.Row="2" Margin="260,213,20,88" IsChecked="False" FontSize="22" />
        <Button x:Name="Button_Return" Content="خروج" Style="{StaticResource RoundedButtonReturnStyle}" Margin="0,2,23,3" Click="Button_Return_Click" IsCancel="True" Grid.Column="1" Width="121" />


    </Grid>
</Window>
