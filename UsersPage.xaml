<Window x:Class="Forma_System.UsersPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Forma_System"
        mc:Ignorable="d"
        Title="عملاء" Height="450" Width="800" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">


    <Grid Background="#FF18191F">
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="71*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="TextBlock_UserId" HorizontalAlignment="Left" Margin="265,19,0,0" TextWrapping="Wrap" Text="م.المستخدم" VerticalAlignment="Top" Width="90" FontFamily="Arial Black" FontSize="14" TextAlignment="Right" Foreground="White" Grid.Row="2"/>
        <TextBox x:Name="TextBox_UserId" 
    Style="{StaticResource RoundedTextBoxReadStyle}"
         ToolTip="هذا الحقل يتم توليده تلقائيًا من النظام ويعرض لك فقط لا يمكن تعديله." HorizontalAlignment="Left" Margin="28,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="327" Height="21" TextAlignment="Right" FontFamily="Times New Roman" FontSize="14" Background="AntiqueWhite" Grid.Row="2"/>
        <DataGrid x:Name="DG" Grid.Row="2"
          Margin="380,41,10,82"
          Background="White"
          AutoGenerateColumns="False"
          RowBackground="White"
          AlternatingRowBackground="{StaticResource AltRowBrush}"
          ColumnHeaderStyle="{StaticResource DGHeaderStyle}"
          CellStyle="{StaticResource DGCellStyle}"
          SelectionChanged="DG_SelectionChanged">

            <DataGrid.Columns>
                <!-- رقم الحضور -->
                <DataGridTextColumn Header="م.المستخدم" Binding="{Binding Id}" Width="80"/>

                <!-- اسم العميل -->
                <DataGridTextColumn Header="اسم المستخدم" Binding="{Binding Name}" Width="150"/>

                <!-- التاريخ -->
                <DataGridTextColumn Header="كلمة المرور" Binding="{Binding Password}" Width="150"/>

                <!-- الملاحظات -->
                <DataGridTextColumn Header="ملاحظات" Binding="{Binding Notes}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name="TextBox_UsersSearsh" Style="{StaticResource RoundedTextBoxStyle}" Margin="383,8,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="28" Background="AntiqueWhite" Grid.Row="2" TextChanged="TextBox_UsersSearsh_TextChanged"/>
        <TextBlock x:Name="TextBlock_UserrPassword" HorizontalAlignment="Left" Margin="247,113,0,0" TextWrapping="Wrap" Text="كلمة مرور المستخدم" VerticalAlignment="Top" Width="108" FontFamily="Arial Black" FontSize="14" TextAlignment="Right" Foreground="White" Grid.Row="2"/>
        <TextBox x:Name="TextBox_UserPassword" Style="{StaticResource RoundedTextBoxStyle}" Background="AntiqueWhite" HorizontalAlignment="Left" Margin="28,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="327" Height="21" TextAlignment="Right" FontFamily="Times New Roman" FontSize="14" Grid.Row="2"/>
        <TextBlock x:Name="TextBlock_UserName" HorizontalAlignment="Left" Margin="263,66,0,0" TextWrapping="Wrap" Text="اسم المستخدم" VerticalAlignment="Top" Width="90" FontFamily="Arial Black" FontSize="14" TextAlignment="Right" Foreground="White" Grid.Row="2"/>
        <TextBox x:Name="TextBox_UserName" Style="{StaticResource RoundedTextBoxStyle}" Background="AntiqueWhite" HorizontalAlignment="Left" Margin="28,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="327" Height="21" TextAlignment="Right" FontFamily="Times New Roman" FontSize="14" Grid.Row="2"/>
        <TextBlock x:Name="TextBlock_UserNotes" HorizontalAlignment="Left" Margin="225,162,0,0" TextWrapping="Wrap" Text="ملاحظات (اختياري)ا" VerticalAlignment="Top" Width="126" FontFamily="Arial Black" FontSize="14" TextAlignment="Right" Foreground="White" Grid.Row="2"/>
        <TextBox x:Name="TextBox_UserNotes" Style="{StaticResource RoundedTextBoxStyle}" Background="AntiqueWhite" HorizontalAlignment="Left" Margin="28,182,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="327" Height="47" TextAlignment="Right" FontFamily="Times New Roman" FontSize="14" Grid.Row="2"/>
        <Grid Background="White" Height="30" VerticalAlignment="Center" Width="800">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="TextBlock_TitleProgram" TextWrapping="Wrap" Text="Forma System" FontFamily="Arial Black" Margin="5,8,687,6" TextAlignment="Center"/>
            <TextBlock x:Name="TextBlock_TitlePage" TextWrapping="Wrap" Text="صفحة مستخدمين البرنامج" FontFamily="Arial Black" Margin="276,2,276,-2" TextAlignment="Center" FontSize="24"/>
        </Grid>
        <Button x:Name="Button_Add" Content="اضافة" Style="{StaticResource RoundedButtonStyle}" Margin="54,250,472,55"  Background="AntiqueWhite" FontFamily="Arial Black" FontSize="16" Click="Button_Add_Click" Grid.Row="2" MinHeight="30"/>
        <Button x:Name="Button_Delete" Content="حذف" Style="{StaticResource RoundedButtonStyle}" Margin="596,278,21,27"  Background="AntiqueWhite" FontFamily="Arial Black" FontSize="16" Click="Button_Delete_Click" Grid.Row="2" MinHeight="30"/>
        <Button x:Name="Button_Update" Content="تعديل" Style="{StaticResource RoundedButtonStyle}" Margin="395,278,222,27"  Background="AntiqueWhite" FontFamily="Arial Black" FontSize="16" Click="Button_Update_Click" Grid.Row="2" MinHeight="30"/>
        <TextBlock x:Name="TextBlock_Add" TextWrapping="Wrap" Text="اضافة مستخدم" FontFamily="Arial Black" Margin="101,13,519,0" TextAlignment="Center" FontSize="24" Foreground="White" Height="30" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBlock x:Name="TextBlock_Display" TextWrapping="Wrap" Text="المستخدمين" FontFamily="Arial Black" Margin="504,13,116,0" TextAlignment="Center" FontSize="24" Foreground="White" Grid.Row="1" Height="30" VerticalAlignment="Top"/>
        <TextBlock x:Name="TextBlock_BaqatSearsh" Margin="737,11,11,0" TextWrapping="Wrap" Text="بحث" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="20" TextAlignment="Center" Foreground="Black" Grid.Row="2"/>
        <Button x:Name="Button_Return" Content="خروج" Style="{StaticResource RoundedButtonReturnStyle}" Margin="0,2,23,3" Click="Button_Return_Click" IsCancel="True" Width="121" />

    </Grid>
</Window>

