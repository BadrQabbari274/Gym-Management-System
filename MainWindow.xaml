<Window x:Class="Forma_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Forma_System"    
        mc:Ignorable="d"
        Title="تسجيل الدخول" Height="450" Width="800" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">


    <Grid x:Name="LoginPage" Background="#FF18191F">
        <Button x:Name="Button_login" Style="{StaticResource RoundedButtonStyle}" IsDefault="True" Content="تسجيل" Margin="0,353,0,0" Click="Button_login_Click" Background="AntiqueWhite" FontFamily="Times New Roman" FontSize="24" Height="42" VerticalAlignment="Top" HorizontalAlignment="Center" Width="200" FontWeight="Bold"/>
        <TextBlock x:Name="TextBlock_username" Margin="0,195,0,0" TextWrapping="Wrap" Text="اسم المستخدم" TextAlignment="Center" Height="19" VerticalAlignment="Top" HorizontalAlignment="Center" Width="100" FontFamily="Arial Black" FontSize="18" Foreground="White"/>
        <TextBlock x:Name="TextBlock_userpaswword" Margin="346,277,0,0" Text="كلمة المرور" TextWrapping="Wrap" TextAlignment="Center" Height="17" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" FontFamily="Arial Black" FontSize="16" Foreground="White"/>
        <PasswordBox x:Name="PasswordBox_passworduser" Style="{StaticResource RoundedPasswordBoxStyle}" Background="AntiqueWhite" Margin="0,298,0,0" Height="42" VerticalAlignment="Top" HorizontalAlignment="Center" Width="412"/>
        <ComboBox
            x:Name="ComboBox_UsersNames"
            Style="{StaticResource RoundedComboBoxStyle}"
            ItemsSource="{Binding Users}"           
            DisplayMemberPath="Name"
            SelectedValuePath="Name"
            SelectedValue="{Binding SelectedUserName}"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Width="412"
            Height="42"
            Margin="0,219,0,0"/>
            <Image HorizontalAlignment="Center" Height="188" VerticalAlignment="Top" Width="502" Source="/Assets/logo-removebg-preview.png" Stretch="Fill" Opacity="0.8"/>

    </Grid>
</Window>
