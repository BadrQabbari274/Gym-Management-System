<Window x:Class="Forma_System.HomaPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Forma_System"
        mc:Ignorable="d"
        Title="الصفحة الرئيسية"
        WindowState="Maximized"
        ResizeMode="CanResize"
        MinWidth="600" MinHeight="400">

    <!-- Root grid with two columns -->
    <Grid Background="#FF18191F">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <DockPanel Grid.ColumnSpan="2" Background="White" Height="40">
            <Button x:Name="Button_AboutUs1"
                    Content="نحن"
                    Style="{StaticResource RoundedButtonReturnStyle}"
                    Width="50"
                    Margin="10,4"
                    DockPanel.Dock="Left"
                    Click="Button_AboutUs_Click" />
            <TextBlock Text="Forma System"
                       FontFamily="Arial Black"
                       VerticalAlignment="Center"
                       Margin="10,0"
                       DockPanel.Dock="Left" />
            <StackPanel DockPanel.Dock="Right" Margin="0,4,10,4" Orientation="Horizontal" FlowDirection="RightToLeft">
                <Button x:Name="Button_Return"
                        Content="خروج"
                        Style="{StaticResource RoundedButtonReturnStyle}"
                        Width="80"
                        IsCancel="True"
                        Click="Button_Return_Click" Height="32" />
                <Button x:Name="Button_Login"
                        Content="تبديل"
                        Style="{StaticResource RoundedButtonReturnStyle}"
                        Width="80"
                        Margin="0,0,5,0"
                        Click="Button_Login_Click" />
                <TextBlock Text="الصفحة الرئيسية"
                       FontFamily="Arial Black"
                       FontSize="20" Height="24" TextAlignment="Center" Width="551"
                       />
            </StackPanel>
        </DockPanel>

        <!-- Sidebar buttons -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="10" Grid.Column="0" VerticalAlignment="Top">
            <Button x:Name="Button_Subscribe"
                    Style="{StaticResource RoundedButtonStyle}"
                    Content="اشتراك"
                    Height="50"
                    Margin="0,0,0,10"
                    Click="Button_Subscribe_Click" />
            <Button x:Name="Button_Attendeds"
                    Style="{StaticResource RoundedButtonStyle}"
                    Content="حضور"
                    Height="50"
                    Margin="0,0,0,10"
                    Click="Button_Attendeds_Click" />
            <Button x:Name="Button_Customers"
                    Style="{StaticResource RoundedButtonStyle}"
                    Content="عملاء"
                    Height="50"
                    Margin="0,0,0,10"
                    Click="Button_Customers_Click" />
            <Button x:Name="Button_Baqat"
                    Style="{StaticResource RoundedButtonStyle}"
                    Content="باقات"
                    Height="50"
                    Margin="0,0,0,10"
                    Click="Button_Baqat_Click" />
            <Button x:Name="Button_Reports"
                    Style="{StaticResource RoundedButtonStyle}"
                    Content="تقارير"
                    Height="50"
                    Margin="0,0,0,10"
                    Click="Button_Reports_Click" />
            <Button x:Name="Button_Users"
                    Style="{StaticResource RoundedButtonStyle}"
                    Content="مستخدمين البرنامج"
                    Height="50"
                    Click="Button_Users_Click" />
        </StackPanel>

        <!-- Main content area -->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Background image with overlay -->
            <Grid>
                <Image Source="/60-194828-gym-most-important-rulse_700x400.jpeg"
                       Stretch="UniformToFill" Opacity="0.8" />
                <Border Background="#AA18191F" >
                    <TextBlock TextWrapping="Wrap" Text="Alexandria" FontSize="30" FontFamily="Times New Roman" Margin="0,31,0,0" Foreground="White" TextAlignment="Center" HorizontalAlignment="Left" Width="220" Height="46" VerticalAlignment="Top"/>
                </Border>
                <Border >
                    <TextBlock TextWrapping="Wrap" Text="01284940906" FontSize="24" FontFamily="Times New Roman" Margin="0,65,0,0" Foreground="White" TextAlignment="Center" HorizontalAlignment="Left" Width="220" Height="46" VerticalAlignment="Top"/>
                </Border>
                <Image Source="/Assets/logo-removebg-preview.png"
                       Width="120"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       Margin="0,20,20,0" />
            </Grid>

            <!-- Status bar at bottom of main area -->
            <Grid Grid.Row="1" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="المستخدم الحالي"
                           FontFamily="Arial Black"
                           FontSize="14"
                           Foreground="White" Grid.Column="3" TextAlignment="Center" />
                <TextBlock x:Name="TextBlock_Identity"
                           Grid.Column="2"
                           FontFamily="Arial Black"
                           Foreground="White" TextAlignment="Center" />
                <TextBlock x:Name="TextBlock_date"
                           FontFamily="Arial Black"
                           Foreground="White" TextAlignment="Center" />
                <TextBlock Text="التاريخ والوقت الحالي"
                    Grid.Column="1"
                    FontFamily="Arial Black"
                    FontSize="14"
                    Foreground="White" TextAlignment="Center" />
            </Grid>
        </Grid>
    </Grid>
</Window>
