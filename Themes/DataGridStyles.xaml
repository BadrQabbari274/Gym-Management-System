<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
        <!-- رؤوس أعمدة الـ DataGrid -->
        <Style x:Key="DGHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FF18191F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Arial Black"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        <!-- خلايا الـ DataGrid -->
        <Style x:Key="DGCellStyle" TargetType="DataGridCell">
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="4,2"/>
        </Style>
        <!-- صفوف متبادلة -->
        <SolidColorBrush x:Key="AltRowBrush" Color="#FFF0F0F0"/>
        <!-- تلوين الصف المحدد -->
        <Style TargetType="DataGridRow">
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    
</ResourceDictionary>