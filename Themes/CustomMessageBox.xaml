<!-- CustomMessageBox.xaml -->
<Window x:Class="Forma_System.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource CustomDialogWindowStyle}"
        Title="إشعار">

    <StackPanel>
        <!-- الرسالة -->
        <TextBlock TextWrapping="Wrap" FontSize="14" Margin="0,0,0,12"
               Text="{Binding Message}" />

        <!-- الأزرار -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Style="{StaticResource DialogButtonStyle}"
              Content="موافق"
              Command="{Binding OKCommand}" />
        </StackPanel>
    </StackPanel>
</Window>
