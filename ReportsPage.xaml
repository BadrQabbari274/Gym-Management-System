<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="Forma_System.ReportsPage"
        Title="صفحة التقارير" Height="600" Width="900"
         WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- أنماط DataGrid reuse -->
        <Style x:Key="DGHeaderStyle" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Background" Value="#FF18191F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Arial Black"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="DGCellStyle" TargetType="{x:Type DataGridCell}">
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>

            <Setter Property="Padding" Value="4,2"/>
        </Style>
        <SolidColorBrush x:Key="AltRowBrush" Color="#FFF0F0F0"/>
        <Style TargetType="{x:Type DataGridRow}">
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#FF18191F">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <!-- الشريط العلوي -->
            <RowDefinition Height="60"/>
            <!-- الفلاتر السريعة -->
            <RowDefinition Height="100"/>
            <!-- KPI Cards -->
            <RowDefinition Height="*"/>
            <!-- المحتوى (Tabs) -->
            <RowDefinition Height="40"/>
            <!-- أزرار التصدير -->
        </Grid.RowDefinitions>

        <!-- شريط العنوان -->
        <Grid Grid.Row="0" Background="White">
            <TextBlock Text="Forma System" FontFamily="Arial Black" FontSize="16"
                 VerticalAlignment="Center" Margin="10,0,0,0"/>
            <TextBlock Text="صفحة التقارير" FontFamily="Arial Black" FontSize="20"
                 VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Button x:Name="Button_Return" Content="خروج" Style="{StaticResource RoundedButtonReturnStyle}" Margin="0,6,17,7" Click="Button_Return_Click" IsCancel="True" Width="121" />
        </Grid>

        <!-- الفلاتر السريعة -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <RadioButton x:Name="RbToday" Content="اليوم" FontFamily="Arial Black" Foreground="White"/>
            <RadioButton x:Name="RbWeek"  Content="هذا الأسبوع" FontFamily="Arial Black" Foreground="White"/>
            <RadioButton x:Name="RbMonth" Content="هذا الشهر" FontFamily="Arial Black" Foreground="White"/>
            <Button x:Name="Btn_ShowReport" Content="عرض التقرير" 
              Style="{StaticResource RoundedButtonStyle}" MinWidth="120"/>
        </StackPanel>

        <!-- KPI Cards -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" >
            <Border Background="White" CornerRadius="8" Padding="10" Width="180">
                <StackPanel>
                    <TextBlock Text="حضور الفترة" FontFamily="Arial Black" FontSize="14" TextAlignment="Center"/>
                    <TextBlock x:Name="TbAttendanceCount" Text="0" FontFamily="Arial Black" FontSize="28" 
                     Foreground="#FF007ACC" TextAlignment="Center"/>
                </StackPanel>
            </Border>
            <Border Background="White" CornerRadius="8" Padding="10" Width="180">
                <StackPanel>
                    <TextBlock Text="اشتراكات على وشك الانتهاء" FontFamily="Arial Black" FontSize="14" TextAlignment="Center" TextWrapping="Wrap"/>
                    <TextBlock x:Name="TbExpiringCount" Text="0" FontFamily="Arial Black" FontSize="28" 
                     Foreground="#FFD9534F" TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- TabControl للمحتوى -->
        <TabControl Grid.Row="3" Margin="10">
            <!-- Tab 1: الحضور -->
            <TabItem Header="التقارير – الحضور">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBox x:Name="TxtSearchAttendance"
             Grid.Row="0"
             Style="{StaticResource RoundedTextBoxStyle}"
             Margin="5"/>

                    <DataGrid x:Name="GridAttendance"
              Grid.Row="1"
              Margin="5"
              AutoGenerateColumns="False"
              RowBackground="White"
              AlternatingRowBackground="{StaticResource AltRowBrush}"
              ColumnHeaderStyle="{StaticResource DGHeaderStyle}"
              CellStyle="{StaticResource DGCellStyle}">
                        <DataGrid.Columns>
                            <!-- بدل DateTime استخدم Date -->
                            <DataGridTextColumn Header="التاريخ"
                            Binding="{Binding Date, StringFormat=dd/MM/yyyy HH:mm}"
                            Width="*"/>
                            <!-- AttendanceDto.Customer هو سلسلة الاسم -->
                            <DataGridTextColumn Header="اسم العميل"
                            Binding="{Binding Customer}"
                            Width="*"/>
                            <!-- AttendanceDto.Notes -->
                            <DataGridTextColumn Header="ملاحظات"
                            Binding="{Binding Notes}"
                            Width="2*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBlock x:Name="TextBlock_BaqatSearsh" Margin="805,0,17,0" TextWrapping="Wrap" Text="بحث" VerticalAlignment="Center" FontFamily="Times New Roman" FontSize="24" TextAlignment="Center" Foreground="Black"/>
                </Grid>
            </TabItem>

            <!-- Tab 2: الاشتراكات -->
            <TabItem Header="التقارير – الاشتراكات">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBox x:Name="TxtSearchSubs"
             Grid.Row="0"
             Style="{StaticResource RoundedTextBoxStyle}"
             Margin="5"/>

                    <DataGrid x:Name="GridSubscriptions"
              Grid.Row="1"
              Margin="5"
              AutoGenerateColumns="False"
              RowBackground="White"
              AlternatingRowBackground="{StaticResource AltRowBrush}"
              ColumnHeaderStyle="{StaticResource DGHeaderStyle}"
              CellStyle="{StaticResource DGCellStyle}">
                        <DataGrid.Columns>
                            <!-- SubscriptionDto.SubscribeDate -->
                            <DataGridTextColumn Header="تاريخ الاشتراك"
                            Binding="{Binding SubscribeDate, StringFormat=dd/MM/yyyy}"
                            Width="*"/>
                            <!-- SubscriptionDto.Customer -->
                            <DataGridTextColumn Header="اسم العميل"
                            Binding="{Binding Customer}"
                            Width="*"/>
                            <!-- SubscriptionDto.Package -->
                            <DataGridTextColumn Header="اسم الباقة"
                            Binding="{Binding Package}"
                            Width="*"/>
                            <!-- SubscriptionDto.Status إذا حبيت تضيفه -->
                            <DataGridTextColumn Header="الحالة"
                            Binding="{Binding Status}"
                            Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBlock x:Name="TextBlock_BaqatSearsh_Copy" Margin="805,0,17,0" TextWrapping="Wrap" Text="بحث" VerticalAlignment="Center" FontFamily="Times New Roman" FontSize="24" TextAlignment="Center" Foreground="Black"/>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- أزرار التصدير -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" >
            <Button x:Name="BtnExportExcel" Content="تصدير Excel" Style="{StaticResource RoundedButtonStyle}" MinWidth="120"/>
        </StackPanel>
    </Grid>
</Window>
